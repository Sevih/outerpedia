# Normalisation des fins de ligne
* text=auto

# Code & data → LF
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.cjs  text eol=lf
*.mjs  text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.md   text eol=lf
*.sh   text eol=lf
*.svg  text eol=lf

# Scripts Windows → CRLF
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf

# Binaires (pas de conversion)
*.png  binary
*.jpg  binary
*.jpeg binary
*.webp binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.zip  binary
*.7z   binary
*.mp4  binary
*.webm binary
*.woff binary
*.woff2 binary
*.ttf  binary
*.otf  binary
